            <div class="header-logo">
                <a asp-area="" asp-controller="courier" asp-action="index">

                    <img src="~/images/GLogo.png" alt="logo" style="height:50px;" />
                </a>
            </div>
           
        </div>
        <div class="d-md-none mobile-nav-bar">
