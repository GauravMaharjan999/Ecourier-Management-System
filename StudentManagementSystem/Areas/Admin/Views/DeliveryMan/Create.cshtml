@model DeliveryMan
@{
    ViewBag.Title = "DeliveryMan Registration ";
    var sn = 0;

    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var actionName = ViewContext.RouteData.Values["action"].ToString();

}

@{
    Layout = ViewBag.Layout;
}
<link href="~/css/FancyTable.css" rel="stylesheet" />
<!-- Breadcubs Area Start Here -->
<div class="breadcrumbs-area">
    <h3>DeliveryMan </h3>
    <ul>
        <li>
            <a asp-controller="DeliveryMan" asp-action="index" data-ajax="true"
               data-ajax-method="GET" data-ajax-mode="replace"
               data-ajax-update="#main-div">Home</a>
        </li>
        <li>@actionName DeliveryMan </li>
    </ul>
</div>
<!-- Admit Form Area Start Here -->
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>@actionName DeliveryMan </h3>
            </div>

        </div>
        <form asp-area="admin" asp-controller=@controllerName asp-action=@actionName method="post" class="new-added-form">
            <div class="row">
                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Name</label>
                    <input type="text" placeholder="" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Phone</label>
                    <input type="number" placeholder="" asp-for="Phone" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Email </label>
                    <input type="text" placeholder="" asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Temporary Address </label>
                    <input type="text" placeholder="" asp-for="TempAddress" class="form-control">
                    <span asp-validation-for="TempAddress" class="text-danger"></span>
                </div>


                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Permanent Address </label>
                    <input type="text" placeholder="" asp-for="PermanentAddress" class="form-control">
                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                </div>


                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Designation </label>
                    <input type="text" placeholder="" asp-for="Designation" class="form-control">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>

                <div class="col-xl-3 col-lg-6 col-12 form-group">
                    <label>Age </label>
                    <input type="number" placeholder="" asp-for="Age" class="form-control">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>








                <div class="col-12 form-group mg-t-8">
                    <button type="submit" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Save</button>
                    <button type="reset" class="btn-fill-lg bg-blue-dark btn-hover-yellow">Reset</button>
                    <a asp-action="Index" asp-controller="DeliveryMan" data-ajax="true"
                       data-ajax-method="GET" data-ajax-mode="replace"
                       data-ajax-update="#main-div" class="btn-fill-lg bg-blue-dark btn-hover-yellow">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>



<script>
    $('.select2').select2();
</script>